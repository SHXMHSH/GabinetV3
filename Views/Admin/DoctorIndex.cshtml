@model IEnumerable<Doctor>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">DoctorList</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="CreateDoctor" class="btn btn-primary">Add New Doctor</a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width100%">
    <thead>
        <th>
            ID
        </th>
<th>
        FirstName
    </th>
    <th>
        LastName
    </th>
    <th></th>

    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td width="30%">@p.Id</td>
                <td width="50%">@p.FirstName</td>
                <td width="30%">@p.LastName</td>
                <td class="text-center">
                    <a asp-action="EditDoctor" asp-controller="Admin" asp-route-doctorid="@p.Id" class="btn btn-danger">Edytuj</a>
                    <form asp-action="DeleteDoctor" asp-controller="Admin" asp-route-doctorid="@p.Id" method="post">
                        <input type="hidden" name="DoctorID" value="@p.Id" />
                        <button type="submit" class="btn btn-default">Delete</button>
                    </form>

            </tr>

        }
    </tbody>
</table>


