
@model IEnumerable<AssistantModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">AssistantList</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="CreateAssistant" class="btn btn-primary">Add New Assistant</a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width100%">
    <thead>
    <th>
        FirstName
    </th>
    <th>
        LastName
    </th>

    <th></th>

    </thead>
    <tbody>
        @foreach (var p in Model)
        {
        <tr>
            <td width="50%">@p.FirstName</td>
            <td width="30%">@p.LastName</td>
            <td class="text-center">
                <a asp-action="EditAssistant" asp-controller="Admin" asp-route-Assistantid="@p.Id" class="btn btn-danger">Edytuj</a>
                <form asp-action="DeleteAssistant" asp-controller="Admin" asp-route-Assistantid="@p.Id" method="post">
                    <input type="hidden" name="AssistantID" value="@p.Id" />
                    <button type="submit" class="btn btn-default">Delete</button>
                </form>

        </tr>

        }
    </tbody>
</table>
