
@model IEnumerable<Gabinet_v2.Models.AppointmentModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">AppointmentList</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="CreateAppointment" class="btn btn-primary">Add New Appointment</a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width100%">
    <thead>
    <th>
        @Html.DisplayNameFor(model => model.AppointmentDate)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.PatientId)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.DoctorId)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Price)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Description)
    </th>
    <th></th>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">@Html.DisplayFor(modelItem => item.AppointmentDate)</td>
                <td width="30%">@Html.DisplayFor(modelItem => item.Patient.PESEL)</td>
                <td width="30%">@Html.DisplayFor(modelItem => item.Doctor.LastName)</td>
                <td width="30%">@Html.DisplayFor(modelItem => item.Price)</td>
                <td width="30%">@Html.DisplayFor(modelItem => item.Description)</td>
                <td class="text-center">
                    <a asp-action="EditAppointment" asp-controller="Admin" asp-route-Appointmentid="@item.Id" class="btn btn-danger">Edytuj</a>
                    <form asp-action="DeleteAppointment" asp-controller="Admin" asp-route-Appointmentid="@item.Id" method="post">
                        <input type="hidden" name="AppointmentID" value="@item.Id" />
                        <button type="submit" class="btn btn-default">Delete</button>
                    </form>

            </tr>

        }
    </tbody>
</table>


